fun main() {
// ЗАДАНИЕ 6
// Создать приложение, в котором пользователь вводит две различных цифры.
// На выходе приложение выдает, если это возможно, из введенных цифр,
// нечетное число. Результат выводится в консоль. При невозможности
// создать нечетное число выводится сообщение – «Создать нечетное
// число невозможно». Каждое число вводится на отдельной строке
println("Введите число от 0 до 9 ")
val a: Byte = readln().toByte() // преобразование в тип Byte
println("Введите второе число от 0 до 9 ")
val b: Byte = readln().toByte() //запись в переменную
if(a%2!=0) { println(b.toString()+a.toString()) // проверка является ли число нечетным
} else if(b%2!=0){println(a.toString()+b.toString()) // создание нечестного числа
}else println("Создать нечетное число невозможно")
}

fun main() {
//ЗАДАЧА 3
//Создать приложение, которое преобразует
// введенное пользователем натуральное
// число из 10-ичной системы в двоичную.
    print("Введите натуральное число:")
    println("Результат: " + taskthird(readln().toInt()))
}

fun taskthird(a: Int): Int {
    var a = a // переменная для копирования значения аргумента
    var binary = 0 // для хранения результата в двоичной системе счисления
    var r = 1 // для увеличения разрядности двоичного числа
    var mod: Int //для вычисления остатка от деления числа на 2
    while (a > 0) { // перевод числа из десятичной системы счисления в двоичную
        mod = a % 2   //остаток от деления на 2
        a /= 2 // число делится на 2 
        binary += mod * r //остаток добавляется в переменную binary 
        r *= 10   // r увеличивается в 10 раз на каждой итерации цикла, чтобы получить двоичное число в правильном порядке разрядов. 
    }
    return binary
}

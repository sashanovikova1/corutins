fun main() {
//ЗАДАЧА 2
//Создать приложение, которое подсчитывает количество различных символов.
// во введенной строке. Символы в ответе расположить в алфавитном
// порядке. Например, дана строка AASADDSS. На выходе получаем:
//A - 3
//D - 2
//S - 3
    print("Введите строку: ")
    println("\"Количество различных символов во введенной строке в алфавитном порядке: " + tasksecond(readln()))
}
fun tasksecond(string: String): String {
        var result = "" // строка которая будет содержать результат
        val chars = mutableMapOf<Char, Int>()      // создание словаря chars типа Map, который будет использоваться для подсчета количества каждого символа во введенной строке
        string.forEach { char ->
            chars[char] = chars.getOrDefault(char, 0) + 1  //проверяется каждый символ есть ли он в словаре chars. Если символ уже есть в словаре, то его счетчик увеличивается на 1. Если символа еще нет в словаре, то он добавляется со значением 1. 
        }
        chars.toSortedMap().forEach { (char, count) ->   //сортировка по алфавиту, далее итерация по словарю, где выводятся символ и его кол-во и доавляются к строке result
            result += "$char - $count\n"
        }
        return result
    }
